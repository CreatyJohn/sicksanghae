<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_parent_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btm_radius2_background"
    android:backgroundTint="@color/white"
    tools:context=".src.main.myPage.group.UserSearchActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"

        app:tabRippleColor="@color/gray"
        app:tabGravity="fill"
        app:tabTextColor="@drawable/menu_selected_color"

        app:tabIndicatorColor="@color/gray"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorGravity="bottom" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tb_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>